<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Start at</th>
      <th>End at</th>
      <th>All Day</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.start_time.strftime('%d/%m/%Y - %H:%M') %></td>
        <td><%= event.end_time.strftime('%d/%m/%Y - %H:%M') %></td>
        <td><%= event.is_all_day %></td>
        <td><%= event.completed %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
